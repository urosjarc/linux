#!/usr/bin/env bash
#Applications

xrandr --output VGA-1 --off --output eDP-1 --off --output LVDS-1 --off --output DP-3 --mode 3840x2160 --pos 3840x0 --rotate left --output DP-2 --primary --mode 3840x2160 --pos 0x0 --rotate normal --output DP-1 --off

nohup slack > /dev/null 2>&1&
nohup chromium-browser > /dev/null 2>&1&
nohup chromium-browser --profile-directory="Default" > /dev/null 2>&1&
nohup pycharm </dev/null > /dev/null 2>&1&

# Mindfulness small

nohup sh -c "sleep 240 && watch -n 240 'cvlc --play-and-exit /home/urosjarc/.i3/sounds/break_small.mp3'" > /dev/null 2>&1&

# Mindfulness big

nohup sh -c "sleep 1800 && watch -n 1800 'cvlc --play-and-exit /home/urosjarc/.i3/sounds/break_big.mp3 && exec ~/.i3/i3lock-fancy-multimonitor/lock'" > /dev/null 2>&1&

exit
